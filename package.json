{
  "name": "devcon-api",
  "description": "Devcon API exposes information about Devcon, past events, schedules and our video archive. You can find more information at https://github.com/efdevcon/api",
  "homepage": "https://api.devcon.org",
  "author": "support@devcon.org",
  "version": "0.6.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/efdevcon/api"
  },
  "scripts": {
    "build": "tsc",
    "start": "NODE_PATH=./dist node ./dist/index",
    "seed:pretalx": "ts-node ./src/db/seed-pretalx.ts",
    "dev:generate": "yarn swagger:generate && yarn db:generate && nodemon ./src/index.ts",
    "dev": "nodemon ./src/index.ts",
    "test": "NODE_ENV=test jest --detectOpenHandles --watchAll --no-cache",
    "test:coverage": "NODE_ENV=test jest --coverage --detectOpenHandles --no-cache",
    "lint": "eslint --fix",
    "prettier": "prettier './src' --write",
    "db:generate": "prisma db push --force-reset --accept-data-loss && prisma db seed",
    "db:generate:account": "prisma db push --force-reset --accept-data-loss --schema src/db/account.prisma && ts-node ./src/db/account-seed",
    "db:studio": "prisma studio",
    "db:studio:account": "prisma studio --schema src/db/account.prisma",
    "swagger:generate": "ts-node ./src/swagger/generate",
    "postinstall": "tsc && yarn swagger:generate && yarn db:generate"
  },
  "prisma": {
    "schema": "./src/db/schema.prisma",
    "seed": "ts-node ./src/db/seed"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src": [
      "lint",
      "prettier"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "./src",
    "coverageDirectory": "../coverage",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "dependencies": {
    "@ethersproject/providers": "^5.7.1",
    "@octokit/rest": "^19.0.7",
    "@prisma/client": "^5.11.0",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "ethereum-blockies-base64": "^1.0.2",
    "express": "^4.18.2",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.7",
    "helmet": "^6.0.1",
    "markdown-it": "^13.0.1",
    "puppeteer": "18.2.1",
    "rss-parser": "^3.13.0",
    "slugify": "^1.6.5",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^4.6.0"
  },
  "devDependencies": {
    "@octokit/types": "^9.0.0",
    "@tsconfig/recommended": "^1.0.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.15",
    "@types/handlebars": "^4.1.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.2.5",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.11.18",
    "@types/puppeteer": "^7.0.4",
    "@types/sqlite3": "^3.1.8",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "prisma": "^5.11.0",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.22.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  }
}
